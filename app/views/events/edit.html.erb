<div class="container">
  <h1>Editing event</h1>
      <%= simple_form_for(@event) do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :date %>
        <%= f.input :time %>
        <%= f.input :latitude %>
        <%= f.input :longitude %>
        <%= f.input :region %>
        <%= f.input :capacity %>
        <%= f.button :submit %>
    <% end %>
    <%= link_to "Show this event", @event %> |
    <%= link_to "Back to events", root_path %>
</div>
