<%# Geocoding for index page - start - %>


<div class="space m-1"></div>

<div class="container d-flex justify-content-center">

  <%# codes de tous les events sans la carte -  - %>
  <div class="all-events w-100">
    <% @events.each do |event| %>
      <div id="events">

        <div class="card mb-5 mt-5 overflow-auto" style="max-width: 540px;">
              <%= link_to event_path(event), class:"text-decoration-none" do %>
                <div class="row g-0">
                  <div class="col-md-4">
                      <%= image_tag event.organization.photo_url, class:"img-fluid", :width=>100, :height=>100, :gravity=>"auto", :crop=>"fill" %>
                  </div>

                  <div class="col-md-8">
                    <div class="card-body">
                      <h2 class="card-title"><%= event.name %></h2>
                      <h3 class="card-organization"><%= event.organization.name %></h3>
                      <h5 class="card-date"><i class="fa-solid fa-calendar-days"></i><%= event.date %></h5>
                    </div>
                  </div>

                </div>
              <% end %>
        </div>

      </div>
    <% end %>
  </div>

   <%# codes de tous les events avec la carte -  - %>
  <div class="container mb-5 mt-5">
    <div class="map d-flex justify-content-end">
      <div style="width: 100%; height: 800px;"
        data-controller="map"
        data-map-events-value="<%= @events.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>


