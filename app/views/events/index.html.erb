<%# Geocoding for index page - start - %>

<p style="color: green"><%= notice %></p>
<h1>events</h1>
<div id="events">
  <% @events.each do |event| %>
    <%# <%= render event, event: event, booking: @booking %>
    <%= render "individual_event", event: event %>
    <p>
      <%= link_to "Show this event", event_path(event) %>
    </p>
  <% end %>

</div>
<div class="container">
  <div class="row">
    <div style="width: 100%; height: 600px;"
      data-controller="map"
      data-map-events-value="<%= @events.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  </div>
<%# Geocodingfor index page - end - %>
