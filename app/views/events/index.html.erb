  <div class="container">
    <h1>Events<strong></strong></h1><form novalidate="novalidate" class="simple_form search" action="/" accept-charset="UTF-8" method="get">
  <div class="search-form-control form-group">
    <input class="form-control string required" type="text" name="search[query]" id="search_query" placeholder=/>
    <button name="button" type="submit" class="btn btn-flat">
      <i class="fas fa-search"></i> Search
    </button>
  </div>
</form>

  </div>
</div>


<div class="container">





  <% @events.each do |event| %>
<div id="events">

  <div class="card mb-5 mt-5" style="max-width: 540px;">
    <div class="row g-0">
      <div class="col-md-4">
        <%= image_tag event.organization.photo_url, class:"img-fluid ", :width=>100, :height=>100, :gravity=>"auto", :crop=>"fill" %>
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h2 class="card-title"><%= event.name %></h2>
          <h3 class="card-organization"><%= event.organization.name %></h3>
          <h5 class="card-date"><%= event.date %></h5>
          <%= link_to "Show this event", event_path(event) %>
        </div>
      </div>
    </div>
  </div>
</div>



  <% end %>
</div>


