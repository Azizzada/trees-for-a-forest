<div id="<%= dom_id event %>">
  <p>
    <strong>name:</strong>
    <%= event.name %>
  </p>

  <p>
    <strong>description:</strong>
    <%= event.description %>
  </p>

  <p>
    <strong>Organisation:</strong>
    <%= event.organization.name %>
    <%= image_tag event.organization.photo_url, class:"img-fluid ", :width=>100, :height=>100, :gravity=>"auto", :crop=>"fill" %>
  </p>

  <p>
    <strong>Latitude:</strong>
    <%= event.latitude %>
  </p>

  <p>
    <strong>Longitude:</strong>
    <%= event.longitude %>
  </p>

  <p>
    <strong>date:</strong>
    <%= event.date %>
  </p>

  <p>
    <strong>time:</strong>
    <%= event.time %>
  </p>

<p>
    <strong>region:</strong>
    <%= event.region %>
  </p>

  <p>
    <strong>capacity:</strong>
    <%= event.capacity %>
  </p>

  <div class="container">
  <div class="row justify-content-center m-5">
    <div class="col-12 col-lg-6 ">
      <div class="p-4 border rounded mb-5 mx-4 shadow-lg p-3 mb-5 bg-white rounded ">
        <h2>Subscribe to this event</h2>
        <br>
        <br>
        <%= simple_form_for([event, booking]) do |f| %>
          <br>
          <%= f.button :submit , class: "btn btn-success w-100 rounded btn-lg"%>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <h2>People who will be attending this event.</h2>
  <% @bookings.each do |booking| %>
    <%= booking.user.first_name %><%= booking.user.last_name %>
  <% end %>
</div>

</div>
