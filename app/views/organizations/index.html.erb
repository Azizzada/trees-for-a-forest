<%# CARDS %>








<div class="container">
  <div class="all-organizations w-100 row justify-content-evenly">
    <% @organizations.each do |organization| %>
      <div class="col-5 mx-5">
          <%= link_to organization_path(organization), class:"text-decoration-none" do %>
            <div class="card mt-5 mb-5">
             <div class="content py-5 d-flex align-items-start flex-column mb-3">
                <div class="py-5">
                  <div class="card-img-top p-3 pb-0">
                    <%= image_tag organization.photo_url, class:"img-fluid ", :width=>100, :height=>100, :gravity=>"auto", :crop=>"fill" %>
                  </div>
                </div>
                <div class="card-body text-md-start">
                  <div class="card-title-organization ">
                    <h3 class="fw-bold"><%= organization.name.capitalize %></h3>
                  </div>
                  <div class="card-text">
                    <p class="text-dark">We have a really cool organization with awesome volunteers. join us today...</p>
                    <div class="d-inline w-100">
                      <% organization.reviews.each do |review| %>
                        <% @mean += review.rating %>
                      <% end %>
                      <% (@mean / organization.reviews.size).times do %>
                        <i class="fa-solid fa-star fa-star-gold"></i>
                      <% end %>
                      <% (5 - (@mean / organization.reviews.size)).times do %>
                        <%# <i class="fa-solid fa-star"></i> %>
                        <i class="fa-regular fa-star"></i>
                      <% end %>
                      <% @mean = 0 %>
                    </div>
                  </div>
                </div>
            </div>
            </div>
          <% end %>
      </div>
    <% end %>
  </div>
</div>






